<style>
  html,body{

background-size: cover;
background-repeat: no-repeat;
height: 100%;

}

.container{
height: 100%;
align-content: center;
}

.card{
height: 380px;

width: 390px;
background-color: rgba(0,0,0,0.5) ;
}

.card-header h3{
color: white;
}



.input-group-prepend span{
width: 50px;
background-color: #817fe0b9;
color: black;
}


.remember{
color: white;
}

.remember input
{
width: 20px;
height: 20px;
margin-left: 15px;
margin-right: 5px;
}

.login_btn{
color: black;
background-color:#817fe0b9;
width: 100px;
}

.login_btn:hover{
color: black;
background-color: white;
}

.links{
